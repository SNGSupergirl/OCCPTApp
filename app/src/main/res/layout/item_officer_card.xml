<?xml version="1.0" encoding="utf-8"?>
<com.google.android.material.card.MaterialCardView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:layout_margin="8dp">

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:padding="16dp">

        <TextView
            android:id="@+id/officer_title"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:fontFamily="@font/chilanka"
            android:text="@string/officer_title_placeholder"
            android:textSize="18sp"
            android:textStyle="bold" />

        <LinearLayout
            android:id="@+id/officer_info_layout"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:layout_below="@id/officer_title"
            android:layout_marginTop="8dp">

            <de.hdodenhof.circleimageview.CircleImageView
                android:id="@+id/officer_photo"
                android:layout_width="80dp"
                android:layout_height="80dp"
                android:src="@drawable/ic_avatar_1"
                app:civ_border_width="2dp"
                app:civ_border_color="#FF000000"/>

            <LinearLayout
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:orientation="vertical"
                android:layout_marginStart="16dp">

                <TextView
                    android:id="@+id/officer_name"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:fontFamily="@font/chilanka"
                    android:text="@string/officer_name_placeholder"
                    android:textSize="16sp" />

                <TextView
                    android:id="@+id/officer_email"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:visibility="gone"
                    android:text="" />

                <TextView
                    android:id="@+id/officer_phone"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:visibility="gone"
                    android:text="" />

            </LinearLayout>

        </LinearLayout>

        <TextView
            android:id="@+id/officer_bio"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_below="@id/officer_info_layout"
            android:layout_marginTop="8dp"
            android:visibility="gone"/>

        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:layout_below="@id/officer_bio"
            android:layout_alignParentEnd="true"
            android:layout_marginTop="8dp">

            <ImageView
                android:id="@+id/call_icon"
                android:layout_width="24dp"
                android:layout_height="24dp"
                android:src="@drawable/ic_call"
                android:layout_marginEnd="16dp"
                android:visibility="gone"
                android:contentDescription="@string/call_officer_content_description" />

            <ImageView
                android:id="@+id/email_icon"
                android:layout_width="24dp"
                android:layout_height="24dp"
                android:src="@drawable/ic_email"
                android:layout_marginEnd="16dp"
                android:visibility="gone"
                android:contentDescription="@string/email_officer_content_description" />

            <ImageView
                android:id="@+id/add_contact_icon"
                android:layout_width="24dp"
                android:layout_height="24dp"
                android:src="@drawable/ic_add_contact"
                android:visibility="gone"
                android:contentDescription="@string/add_officer_contact_content_description" />

        </LinearLayout>

    </RelativeLayout>

</com.google.android.material.card.MaterialCardView>